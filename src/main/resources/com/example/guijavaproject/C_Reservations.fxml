<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guijavaproject.C_reservationsController">

    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #6C5B7B; -fx-padding: 20px; -fx-pref-width: 250px;">
            
            <ImageView fx:id="brandingImageView" fitHeight="183.0" fitWidth="216.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../../../Images/RobinsonLogo.png" />
                </image>
            </ImageView>
            
            <Button fx:id="btnClients" onAction="#ReservationsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="📅 My Reservations">
            <effect>
               <Glow level="1.0" />
            </effect></Button>
            
            <Button fx:id="btnRooms" onAction="#ReservationManagementsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="📅 Manage Reservations" />
            
            <Button fx:id="btnBilling" onAction="#RoomsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="🛏 Free Rooms" />
            
            <Button fx:id="logoutButton" onAction="#LogoutButtonAction" style="-fx-background-color: #F67280; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-radius: 10px;" text="🚪 Log Out" />
        </VBox>
    </left>

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #355C7D; -fx-padding: 15px;">
            <Label fx:id="dateLabel" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="34.0" prefWidth="923.0" textFill="WHITE" translateX="-8.0">
                <font>
                    <Font name="System Bold" size="19.0" />
                </font>
            </Label>
         <Button fx:id="reportButton" focusTraversable="false" onAction="#ReportButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="⚠ Report a problem" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="👤 Client" />
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30; -fx-background-color: #F67280;">
         <children>
            <BorderPane prefHeight="555.0" prefWidth="891.0" StackPane.alignment="TOP_LEFT">
               <top>
                  <AnchorPane prefHeight="116.0" prefWidth="964.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label layoutX="88.0" layoutY="33.0" text="MY RESERVATIONS" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                           <effect>
                              <Glow level="0.8" />
                           </effect>
                        </Label>
                        <Button fx:id="logoutButton1" layoutX="665.0" layoutY="59.0" onAction="#loadDataFromDatabase" style="-fx-background-color: #e96370; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-radius: 10px;" text="🔍 Search" />
                        <Label layoutX="675.0" layoutY="23.0" style="-fx-text-fill: white; -fx-font-size: 16px;" text="CIN" />
                        <TextField fx:id="CinTextField" layoutX="711.0" layoutY="23.0" />
                     </children>
                  </AnchorPane>
               </top>
               <center>
                  <TableView fx:id="reservationTable" prefHeight="350.0" prefWidth="902.0" style="-fx-background-color: #e96370;" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="reservationIdColumn" prefWidth="189.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="RESERVATION-ID" />
                        <TableColumn fx:id="startDateColumn" prefWidth="191.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="CHECK-IN" />
                        <TableColumn fx:id="endDateColumn" prefWidth="222.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="CHECK-OUT" />
                        <TableColumn fx:id="cinColumn" minWidth="0.0" prefWidth="188.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="CLIENT ID" />
                        <TableColumn fx:id="roomIdColumn" prefWidth="173.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="ROOM ID" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
         </children></StackPane>
    </center>

    <bottom>
        <Label prefHeight="40.0" prefWidth="1292.0" style="-fx-padding: 10px; -fx-background-color: #355C7D; -fx-text-fill: white; -fx-font-size: 14px;" text="🏨 Hotel Management System - Connected" />
    </bottom>

</BorderPane>
