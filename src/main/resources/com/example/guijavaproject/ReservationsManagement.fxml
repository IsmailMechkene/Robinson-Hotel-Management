               <Glow level="1.0" />
            </effect></Button>
            
            <Button fx:id="btnClients" onAction="#ClientsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="👤 Clients">
