               <Glow level="0.0" />
            </effect></Button>
            
            <Button fx:id="brnRooms" onAction="#RoomsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="🛏 Rooms" />
            
            <Button fx:id="logoutButton" onAction="#LogoutButtonAction" style="-fx-background-color: #F67280; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-radius: 10px;" text="🚪 Log Out" />
        </VBox>
    </left>

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #355C7D; -fx-padding: 15px;">
           <Label fx:id="dateLabel" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="34.0" prefWidth="870.0" textFill="WHITE" translateX="-8.0">
              <font>
                 <Font name="System Bold" size="19.0" />
              </font>
           </Label>
         <Button fx:id="reportButton" focusTraversable="false" onAction="#ReportButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="⚠ Report a problem" />

           <Label prefHeight="25.0" prefWidth="128.0" style="-fx-text-fill: white; -fx-font-size: 16px;" text="👤 Receptionist" />
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30; -fx-background-color: #F67280;">
         <children>
            <BorderPane prefHeight="555.0" prefWidth="891.0" StackPane.alignment="TOP_LEFT">
               <left>
                  <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="555.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="addClientCin" layoutX="119.0" layoutY="241.0" prefHeight="25.0" prefWidth="175.0" />
                        <Label layoutX="14.0" layoutY="153.0" text="CHECK IN" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="196.0" text="CHECK OUT" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
