                    <Image url="@../../../../../Images/RobinsonLogo.png" />
                </image>
            </ImageView>
            
            <Button fx:id="btnDashboard" onAction="#DashboardButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="🏠 Dashboard" />
            
            <Button fx:id="btnReservations" onAction="#ReservationsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="📅 Reservations">
