<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guijavaproject.C_RoomsController">

    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #6C5B7B; -fx-padding: 20px; -fx-pref-width: 250px;">
            
            <ImageView fx:id="brandingImageView" fitHeight="183.0" fitWidth="216.0" pickOnBounds="true" preserveRatio="true" />
            
            <Button fx:id="btnRes" onAction="#ReservationsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="📅 My Reservations" />
            
            <Button fx:id="btnManageRes" onAction="#ReservationManagementsButtonAction" prefHeight="35.0" prefWidth="252.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="📅 Manage Reservations" />
            
            <Button fx:id="btnFreeRooms" onAction="#RoomsButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="🛏 Free Rooms">
            <effect>
               <Glow level="1.0" />
            </effect></Button>
            
            <Button fx:id="logoutButton" onAction="#LogoutButtonAction" style="-fx-background-color: #F67280; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-radius: 10px;" text="🚪 Log Out" />
        </VBox>
    </left>

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #355C7D; -fx-padding: 15px;">
            <Label fx:id="dateLabel" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="34.0" prefWidth="923.0" textFill="WHITE" translateX="-8.0">
                <font>
                    <Font name="System Bold" size="19.0" />
                </font>
            </Label>
         <Button fx:id="reportButton" focusTraversable="false" onAction="#ReportButtonAction" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" text="⚠ Report a problem" />

            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="👤 Client" />
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 30; -fx-background-color: #F67280;">
         <children>
            <BorderPane prefHeight="555.0" prefWidth="891.0" StackPane.alignment="TOP_LEFT">
               <top>
                  <AnchorPane prefHeight="105.0" prefWidth="964.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label layoutX="240.0" layoutY="26.0" text="CHECK ROOM AVAILABILITY" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                           <effect>
                              <Glow level="0.8" />
                           </effect>
                        </Label>
                     </children>
                  </AnchorPane>
               </top>
               <left>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <TableView fx:id="roomTable" layoutY="31.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="419.0" prefWidth="526.0" style="-fx-background-color: #e96370;">
                          <columns>
                              <TableColumn fx:id="roomIdColumn" prefWidth="163.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="Room ID" />
                              <TableColumn fx:id="bedsNumberColumn" prefWidth="183.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="Status" />
                              <TableColumn fx:id="roomStatusColumn" prefWidth="179.0" style="-fx-background-color: #f2a6ad; -fx-text-fill: #ffffff; -fx-alignment: CENTER; -fx-font-size: 16px;" text="Number of beds" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </left>
               <center>
                  <AnchorPane prefHeight="450.0" prefWidth="438.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label layoutX="115.0" layoutY="35.0" text="FIND FREE ROOMS" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label layoutX="56.0" layoutY="153.0" text="Check-in date" textFill="WHITE">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="startDatePicker" layoutX="213.0" layoutY="155.0" prefHeight="25.0" prefWidth="172.0" />
                        <Label layoutX="56.0" layoutY="191.0" text="Check-out date" textFill="WHITE">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                         <Label fx:id="SearchMessageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="40.0" layoutY="283.0" prefHeight="67.0" prefWidth="361.0" textAlignment="CENTER" textFill="#355c7d" wrapText="true">
                             <font>
                                 <Font size="18.0" />
                             </font>
                         </Label>
                        <Button layoutX="108.0" layoutY="369.0" mnemonicParsing="false" onAction="#handleSearchRoomsButton" prefHeight="34.0" prefWidth="238.0" style="-fx-background-color: #e96370;" text="Search" textFill="WHITE">
                           <font>
                              <Font name="Arial Black" size="16.0" />
                           </font>
                        </Button>
                        <DatePicker fx:id="endDatePicker" layoutX="214.0" layoutY="193.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="172.0" />
                        <TextField fx:id="nbPersonsField" layoutX="237.0" layoutY="233.0" prefHeight="0.0" prefWidth="149.0" />
                        <Label layoutX="56.0" layoutY="231.0" text="Number of persons" textFill="WHITE">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
               </center>
            </BorderPane>
         </children></StackPane>
    </center>

    <bottom>
        <Label prefHeight="40.0" prefWidth="1292.0" style="-fx-padding: 10px; -fx-background-color: #355C7D; -fx-text-fill: white; -fx-font-size: 14px;" text="🏨 Hotel Management System - Connected" />
    </bottom>

</BorderPane>
